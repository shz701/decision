/**index.wxss**/
.text {
  font-size: 24rpx;
}
.mainView {
    width: 100%;
}
.topTabBar {
    background-color: #d75b5d;
    width: 100%;
    height: 78rpx;
    display: flex;
    flex-direction: row;
}
.leftView {
    height: 100%;
    width: 100%;
    position: relative;
}
.rightview {
    background-color: transparent;
    height: 100%;
    width: 10%;
    position: relative;
}

.tpbottomView {
    position: absolute;
    background-color: #d75b5d;
    width: 100%;
    height: 18rpx;
    bottom: 0;
    z-index: 96;
}

.tpscview {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    font-family: initial;
    font-weight: lighter;
    display: flex;
    white-space: nowrap;
}

.topdatalist {
  display:inline-block;
  color: white;
  width: 33%;
  height: 100%;
  text-align: center;
  z-index: 99;
  line-height: 78rpx;
  font-weight:bold;
  vertical-align:middle;
}

.curPage {
     animation:myfirst 0.1s;
     animation-fill-mode:forwards;
}

@keyframes myfirst
{
	to {
       font-size: 34rpx;
    }
}

.addImage {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}

.bottomView {
    width: 100%;
    height: 100%;
    font-size: 40rpx;
    font-family: initial;
    font-weight: lighter;
    display: flex;
    white-space: nowrap;
}

.subView {
    background-color: f0f0f0;
    width: 100%;
    display:inline-block;
    height: 1052rpx;
}

.detailCell {
    width: 100%;
    box-sizing:  border-box;
    padding:20rpx;
    background: white;
    border-bottom: 1rpx solid darkgray;
}

.cellbottom {
    width: 100%;
    height: 44rpx;
    background-color: transparent;
    color: #dddddd;
    font-size: 30rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
}

.imageContainer {
    width: 240rpx;
    flex-direction: row;
    display: flex;
    height: 180rpx;
    background-color: transparent;
    justify-content: space-around;
}

.imageshow {
    width: 230rpx;
    height: 150rpx;
}
.articlelist{
  padding:20rpx;
}
.row{
  width:100%;
  min-height: 78rpx;
  border-bottom: 1px solid #ccc;
  height: 200rpx;
}
.row :last-child{
  border-bottom: none;
}
.articleleft{
  width:40%;
  float:left;
  position: relative;
  height: 200rpx;
  padding-top:1rpx;
}
.articleright{
  width:55%;
  float:right;
  position: relative;
  height:200rpx;
}
.scroll{
overflow:hidden;

}
page{
  overflow: hidden;
}